spec:
  template:
    spec:
      volumes:
        - name: config-volume
          configMap:
            name: runai-patch
      containers:
      - name: researcher-service
        env:
        - name: NODE_EXTRA_CA_CERTS
          value: /etc/ssl/certs/rootCA.pem
